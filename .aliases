echo "loading... $HOME/.aliases"

# Shortcuts
# alias _="sudo"
alias v="vim"
alias rr="rm -rf"
alias json="json -c"

# Git
alias g="git"
alias ga="clear; git add . -A; git status"
alias gs="git status"
alias gc="git commit -m"
alias gcl="git clone"
alias gcl="git clone"
alias gl="log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit"

# List declared aliases, functions TODO: fish shell
alias listaliases="alias | sed 's/=.*//'"
alias listfunctions="declare -f | grep '^[a-z].* ()' | sed 's/{$//'" # show non _prefixed functions

# npm
alias ni="npm install"
alias nun="npm uninstall"
alias nup="npm update"
